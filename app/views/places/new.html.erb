<h1 class="mb-4">New Place</h1>

<form action="<%= places_path %>" method="post" class="w-50">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="mb-3">
    <label for="place_name" class="form-label">Place Name</label>
    <input
      type="text"
      name="name"
      id="place_name"
      class="form-control"
      required
    >
  </div>

  <div class="d-flex align-items-center">
    <button type="submit" class="btn btn-primary me-3">Create Place</button>
    <%= link_to "Cancel", places_path, class: "btn btn-link" %>
  </div>
</form>

