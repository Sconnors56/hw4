<h1 class="mb-4">Places</h1>

<%= link_to "New Place",
    new_place_path,
    class: "btn btn-outline-dark btn-lg mb-4" %>

<ul class="list-unstyled">
  <% @places.each do |place| %>
    <li class="mb-2">
      <%= link_to place.name,
          place_path(place),
          class: "fs-5 text-decoration-underline" %>
    </li>
  <% end %>
</ul>

